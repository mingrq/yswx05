<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!--轮播图样式-->
    <declare-styleable name="SlideShow">
        <attr name="indicatorHeight" format="dimension" />
        <attr name="indicatorBgColor" format="color|integer" />
        <attr name="indicatorSize" format="dimension" />
        <attr name="indicatorMargin" format="dimension" />
        <attr name="slideTime" format="integer" />
        <attr name="indicatorSelecter" format="reference" />
    </declare-styleable>

    <!--首页菜单按钮标题样式-->
    <style name="homemenu_control_tit_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/homemenu_title</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!--首页菜单按钮图标样式-->
    <style name="homemenu_control_bg_style">
        <item name="android:layout_width">46dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/shape_homemenu_control</item>
    </style>

    <!--app UI中快捷联系方式-->
    <style name="app_quick_contact">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">14dp</item>
        <item name="android:background">@drawable/shape_homemenu_control</item>
    </style>

    <!--联系我们item图标样式-->
    <style name="item_contactus_ico_style">
        <item name="android:layout_width">4dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!--联系我们item文字样式-->
    <style name="item_contactus_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
